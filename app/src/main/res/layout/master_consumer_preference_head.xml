<!-- Layout for a Preference in a PreferenceActivity. The
     Preference is able to place a specific widget for its particular
     type in the "widget_frame" layout. -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/pref_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8px"
            android:background="@drawable/shape_preferences_bg_item_head"
            android:gravity="center_vertical">

            <ImageView
                android:id="@android:id/icon"
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_gravity="center" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24px"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@android:id/summary">

                    <TextView
                        android:id="@android:id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="12px"
                        android:textColor="#FFFFFF"
                        android:textSize="36px" />
                </FrameLayout>

                <TextView
                    android:id="@android:id/summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:alpha="0.6"
                    android:gravity="end"
                    android:maxWidth="217px"
                    android:paddingStart="30px"
                    android:textColor="#FFFFFF"
                    android:textSize="32px" />

            </RelativeLayout>

            <!-- Preference should place its actual preference widget here. -->
            <LinearLayout
                android:id="@android:id/widget_frame"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone" />

            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_gravity="center"
                android:src="@android:drawable/arrow_up_float" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/divider_horizontal_bright"
            android:visibility="visible" />
    </LinearLayout>
</FrameLayout>